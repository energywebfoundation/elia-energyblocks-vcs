base <https://github.com/energywebfoundation/elia-energyblocks-vcs/tree/master/ontology/v1/>;
use <http://www.w3.org/2001/XMLSchema#> as xs;
use <https://saref.etsi.org/saref4ener/> as saref4ener;
use <https://treeldr.org/> as tldr;

// tldrc -i contract.tldr json-ld-context https://github.com/energywebfoundation/elia-energyblocks-vcs/tree/master/ontology/v1/Contract
// tldrc -i contract.tldr json-schema https://github.com/energywebfoundation/elia-energyblocks-vcs/tree/master/ontology/v1/Contract
type Contract {
  contractedItem: Device,
  party1: schema:Organization, 
  party2: schema:Person,
  expressionOfTheOffer: xs:string with tldr:String,
  compensationOfTheOffer: xs:string with tldr:String,
  jurisdiction: xs:string with tldr:String,
  applicationLaw: xs:string with tldr:String,
}

// tldrc -i device-info.tldr json-ld-context https://github.com/energywebfoundation/elia-energyblocks-vcs/tree/master/ontology/v1/Device
// tldrc -i device-info.tldr json-schema https://github.com/energywebfoundation/elia-energyblocks-vcs/tree/master/ontology/v1/Device
type Device {
  saref4ener:brandName: xs:string with tldr:String,
  saref4ener:deviceCode: xs:string with tldr:String
}